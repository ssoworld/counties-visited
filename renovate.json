{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "enabledManagers": ["npm"],
  "packageRules": [
    {
      "matchPackagePatterns":[
        "*"
      ],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "groupName": "Minor and Patch dependencies",
      "groupSlug": "all"
    }
  ]
}
